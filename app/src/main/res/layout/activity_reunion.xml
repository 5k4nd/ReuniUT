<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#4ea28e"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/fieldIntitule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="@string/intitule"
        android:textSize="20sp"

        />
    <EditText
        android:id="@+id/reunionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/reunion_name"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/fieldDescriptif"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="@string/descriptif_name"
        android:textSize="20sp"

        />

    <EditText
        android:id="@+id/descriptif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/descriptif_reunion"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/fieldParticipant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="@string/participant_reunion"
        android:textSize="20sp"

        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/group_arrays"
        android:prompt="@string/participant_reunion"
        android:gravity="center"/>

    <TableLayout
        android:id="@+id/tabledate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
    >

        <TableRow>
            <EditText
                android:id="@+id/datedebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:inputType="text"
                android:hint="@string/date_deb"


              />


            <EditText
                android:id="@+id/datefin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:inputType="text"
                android:hint="@string/date_fin"

               />

        </TableRow>

    </TableLayout>



    <Button
        android:id="@+id/buttReunion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/Reunionchoix"
        android:textColor="#275d90"
        />

</LinearLayout>
